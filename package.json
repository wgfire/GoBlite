{
  "name": "vite-goblite",
  "version": "0.1.0",
  "private": true,
  "description": "基于浏览器的低代码平台，提供模板选择、在线编码和在线构建功能",
  "scripts": {
    "dev": "pnpm --filter main-app dev",
    "build": "pnpm run -r build",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,vue,css,scss,md}\"",
    "start:server": "pnpm --filter @templates/server dev",
    "start:app": "pnpm --filter main-app dev",
    "start": "concurrently \"pnpm run start:server\" \"pnpm run start:app\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
