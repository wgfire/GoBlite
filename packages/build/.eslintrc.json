{
  "extends": ["plugin:@next/next/recommended"],
  "ignorePatterns": ["dist/*"],
  "settings": {
    "next": {
      "rootDir": ["web-site"]
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules":{
    "no-html-link-for-pages": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@next/next/no-html-link-for-pages": ["error", "app"]
  }
}
