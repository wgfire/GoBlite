{
  "name": "@go-blite/design",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/lib/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/lib/index.js"
    },
    "./styles": {
      "import": "./dist/esm/styles/index.css",
      "require": "./dist/lib/styles/index.css"
    },
    "./styles/*": {
      "import": "./dist/esm/styles/*.css",
      "require": "./dist/lib/styles/*.css"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "build:demo": "tsc && vite build --mode demo",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/language": "^6.11.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.37.1",
    "@craftjs/core": "^0.2.0",
    "@craftjs/layers": "0.2.5",
    "@go-blite/events": "workspace:*",
    "@go-blite/shadcn": "workspace:*",
    "clsx": "^2.1.1",
    "lucide-react": "^0.439.0",
    "re-resizable": "6.1.0",
    "react-color": "^2.19.3",
    "react-contenteditable": "^3.3.7",
    "react-moveable": "^0.56.0"
  },
  "peerDependencies": {
    "ahooks": "^3.8.1",
    "lodash-es": "^4.17.21",
    "react": "^18",
    "react-dom": "^18",
    "use-immer": "^0.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "vite-plugin-dts": "^4.2.3"
  }
}
